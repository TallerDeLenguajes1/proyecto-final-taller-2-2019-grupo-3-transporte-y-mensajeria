<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_WPF.Vistas.VistasSupervisor"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="UI_WPF.Vistas.VistasSupervisor.VehiculosAsociados"
      mc:Ignorable="d" 
      d:DesignHeight="263" d:DesignWidth="314"
      Title="VehiculosAsociados">

    <Grid >
        <Label x:Name="lblClientCuil" Content="Vehiculos" Margin="10,99,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="62"/>
        <Label Content="VEHICULOS A CARGO" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Myriad Pro" FontWeight="Bold" HorizontalAlignment="Left" Width="129"/>
        <Label x:Name="lblBuscarPor" VerticalAlignment="Top" Margin="10,45,0,0" HorizontalAlignment="Left" Content="Buscar por:"/>
        <TextBox x:Name="tbxBuscar" Width="121" VerticalAlignment="Top" Text="ford" TextWrapping="Wrap" Style="{StaticResource TextBoxStyle1}" Margin="150,74,0,0" Height="23" HorizontalAlignment="Left"/>

        <ComboBox x:Name="cboBuscar" HorizontalAlignment="Left" Margin="16,74,0,0" VerticalAlignment="Top" Width="123">
            <ComboBoxItem Content="Todos" IsSelected="True"/>
            <ComboBoxItem Content="Modelo" />
            <ComboBoxItem Content="Año de compra"/>
        </ComboBox>
        <ListBox x:Name="lbxResultBusqueda" Margin="16,125,16,57"/>
        <Button x:Name="btnQuitar" Style="{StaticResource ButtonStyle1}" Content="Quitar" Margin="0,0,16,23" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="59" Click="btnQuitar_Click" />
        <Button x:Name="btnBuscar" Style="{StaticResource ButtonStyle1}" HorizontalAlignment="Left" Margin="276,74,0,0" VerticalAlignment="Top" Width="22" Height="22" Click="btnBuscar_Click" >
            <materialDesign:PackIcon Kind="Magnify"/>
        </Button>
    </Grid>
</Page>
